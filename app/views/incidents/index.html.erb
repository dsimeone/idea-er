<h1>Listing incidents</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Lat</th>
    <th>Lng</th>
    <th>Description</th>
    <th>Incidenttype</th>
    <th>Incidentstatus</th>
    <th>Finalizedtime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @incidents.each do |incident| %>
  <tr>
    <td><%= incident.title %></td>
    <td><%= incident.lat %></td>
    <td><%= incident.lng %></td>
    <td><%= incident.description %></td>
    <td><%= incident.incidentType %></td>
    <td><%= incident.incidentStatus %></td>
    <td><%= incident.finalizedTime %></td>
    <td><%= link_to 'Show', incident %></td>
    <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
    <td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

