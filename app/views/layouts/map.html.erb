<!DOCTYPE html>
<html>
<head>
  <title><%=full_title(yield(:title))%></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "marker_mod" %>

    <script src="http://maps.googleapis.com/maps/api/js?sensor=true&libraries=drawing">  </script>

  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= render 'layouts/header' %> 

       <div id="map_canvas"></div>
    <%= yield %>
       <div id="sidebar">
          <table class="table table-bordered">
          	   <tr>
          	   	   <td><i  class="icon-globe icon-white"></i> <icon-glass> <%=  @situation_geosmap.name%></td>
          	   </tr>
          	</table>
            <div class="container-fluid" id="generalPanel">
            	<div class="row-fluid">
            		<table>
            			<tr>
                         		  <td><label id="idlatlng">Lat/Long: </label></td> 
            				      <td><input type="text" id="geolat"    maxlength="8" </td>
             				      <td><input type="text" id="geolng"  maxlength="8" </td>            			
                        </tr>
                    </table>
 		        </div>
            </div>
            	
       </div>
    
</body>
</html>

